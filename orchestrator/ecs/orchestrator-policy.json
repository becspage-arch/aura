{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EcsControl",
      "Effect": "Allow",
      "Action": [
        "ecs:ListTasks",
        "ecs:DescribeTasks",
        "ecs:RunTask",
        "ecs:StopTask"
      ],
      "Resource": "*"
    },
    {
      "Sid": "PassRolesForRunTask",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": [
        "arn:aws:iam::074184607195:role/ecsTaskExecutionRole"
      ]
    }
  ]
}
